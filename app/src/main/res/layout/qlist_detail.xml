<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/main_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/wall_picture"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/eee"
        android:layout_weight="1"
        android:scaleType="centerInside"/>

    </LinearLayout>

    <!--<include layout="@layout/title_layout"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center_horizontal"
        android:textColor="#4f47f7"
        android:text="简要: "
        android:layout_marginLeft="10dp"
        android:textSize="18sp" />

        <TextView
            android:id="@+id/wall_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="标题"
            android:textSize="20sp" />

        <!--<TextView-->
            <!--android:id="@+id/wall_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:textColor="@color/black"-->
            <!--android:text="时间"-->
            <!--android:textSize="15sp" />-->
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="内容: "
            android:textColor="@color/blue47"
            android:textSize="18sp"
            android:fadeScrollbars="false"
            android:layout_marginLeft="10dp"
            android:scrollbars = "vertical"/>

        <TextView
            android:id="@+id/wall_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:fadeScrollbars="false"
            android:scrollbars = "vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/completed_wrap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:background="@drawable/str_answer"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="各方解答"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"
            android:fadeScrollbars="false"
            android:scrollbars = "vertical"/>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:fastScrollEnabled="true"
            android:listSelector="@drawable/news_list_item_selector" >
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!--android:id="@+id/detail_page_do_comment"-->
        <!--android:background="@drawable/comment_bt_selector"-->
        <TextView
            android:id="@+id/detail_page_do_comment"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="22dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:text="说点什么吧..."
            android:background="#eee"
            android:textColor="#B6B6B6"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>